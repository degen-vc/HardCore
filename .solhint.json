{
  "extends": [
    "solhint:recommended"
  ],
  "rules": {
    "compiler-version": [
      "error",
      "^0.6.0"
    ],
    "quotes": [
      "error",
      "double"
    ],
    "max-line-length": [
      "error",
      80
    ],
    "reason-string": [
      "warn",
      {
        "maxLength": 32
      }
    ],
    "no-unused-vars": "error",
    "avoid-suicide": "error",
    "avoid-sha3": "warn",
    "not-rely-on-time": "off"
  }
}